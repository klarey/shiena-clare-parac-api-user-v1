					<munit-tools:with-attribute whereValue="5f52e63b-1369-4817-bde7-24954a6cf41f" attributeName="doc:id" />
				</munit-tools:with-attributes>
				<munit-tools:then-return >
					<munit-tools:payload value='#[[&#10;	{&#10;		"updateCount1": 1&#10;	}&#10;]]' mediaType="application/java" />
				</munit-tools:then-return>
			</munit-tools:mock-when>
		</munit:behavior>
		<munit:execution >
			<http:request method="POST" doc:name="POST /users" doc:id="8cb0ded9-c954-41c0-8fdd-54b03d8297f4" config-ref="HTTP_Request_configuration" path="users">

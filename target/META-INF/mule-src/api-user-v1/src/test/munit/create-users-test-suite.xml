---
{
	"requestCode" : "aOEF3M2cEG0204NO"
}]]]></http:headers>
			</http:request>
		</munit:execution>
		<munit:validation >
			<munit-tools:assert-that doc:name="Assert that Status Code is 200" doc:id="0120b2bd-750f-4a5c-a369-f67f73ea4d87" is="#[MunitTools::equalTo(200)]" expression="#[attributes.statusCode]" />
			<munit-tools:assert-equals doc:name="Assert that Response Payload is as Expected" doc:id="d383bcbb-d4ce-4bf4-8e86-db33175cc626" actual="#[payload]" expected="#[readUrl('classpath://in/create-users-success.json')]" />
			<munit-tools:verify-call doc:name="Verify call to Log End" doc:id="b3bd5d75-cfe1-460c-853f-ebac2cf07538" processor="json-logger:logger">
				<munit-tools:with-attributes >

	<munit:config name="create-users-test-suite.xml" />
	<munit:test name="create-users-test-suite-create-users-subflow-test" doc:id="a73d0496-78ed-40ec-a94d-3b0a6cbdce77" description="Test">
		<munit:enable-flow-sources >
			<munit:enable-flow-source value="api-user-v1-main" />
			<munit:enable-flow-source value="post:\users:application\json:api-user-v1-config" />
		</munit:enable-flow-sources>
		<munit:behavior >
			<munit-tools:mock-when doc:name="Mock when insert to DB is successful" doc:id="83074665-c7da-4d84-9966-1d3bd4ef7348" processor="db:stored-procedure">
				<munit-tools:with-attributes >
